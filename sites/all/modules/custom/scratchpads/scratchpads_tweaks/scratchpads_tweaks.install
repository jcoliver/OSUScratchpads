function scratchpads_tweaks_update_7058(&$sandbox){
  if(!isset($sandbox['cids'])){
    // Get a list of all the comments that have been authored by anonymous, and 
    // that have not been approved.
    $query = db_select('comment', 'c')->fields('c', array(
      'cid'
    ))->condition('uid', 0)->condition('status', 0);
    $query->innerJoin('field_data_comment_body', 'b', 'c.cid = b.entity_id');
    $query->condition('comment_body_value', '%http%', 'LIKE');
    $sandbox['cids'] = $query->execute()->fetchCol();
    $sandbox['max'] = count($sandbox['cids']);
    if(!$sandbox['max']){
      $sandbox['#finished'] = 1;
      return;
    }
  }
  $i = 0;
  while($i < 10 && count($sandbox['cids'])){
    comment_delete(array_pop($sandbox['cids']));
  }
  $sandbox['#finished'] = $sandbox['progress'] = ($sandbox['max'] - count($sandbox['cids'])) / $sandbox['max'];
}

