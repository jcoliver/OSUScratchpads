function theme_scratchpads_species_name($vars){
  // FIXME - the unit_indicators are not being displayed on all ranks if they
  // are present.
  $term = $vars['term'];
  // Give the default name as the term name, we will try and overwite this below
  $name = $term->name;
  $rank = (isset($term->field_rank[LANGUAGE_NONE][0]['value']) ? strtolower($term->field_rank[LANGUAGE_NONE][0]['value']) : null);
  $unit1 = (isset($term->field_unit_name1[LANGUAGE_NONE][0]['value']) ? $term->field_unit_name1[LANGUAGE_NONE][0]['value'] : null);
  $unit2 = (isset($term->field_unit_name2[LANGUAGE_NONE][0]['value']) ? $term->field_unit_name2[LANGUAGE_NONE][0]['value'] : null);
  $unit3 = (isset($term->field_unit_name3[LANGUAGE_NONE][0]['value']) ? $term->field_unit_name3[LANGUAGE_NONE][0]['value'] : null);
  $unit4 = (isset($term->field_unit_name4[LANGUAGE_NONE][0]['value']) ? $term->field_unit_name4[LANGUAGE_NONE][0]['value'] : null);
  $unit_ind1 = (isset($term->field_unit_indicator1[LANGUAGE_NONE][0]['value']) ? $term->field_unit_indicator1[LANGUAGE_NONE][0]['value'] . (in_array($term->field_unit_indicator1[LANGUAGE_NONE][0]['value'], array(
    '×',
    'x'
  )) ? '' : ' ') : '');
  $unit_ind2 = (isset($term->field_unit_indicator2[LANGUAGE_NONE][0]['value']) ? $term->field_unit_indicator2[LANGUAGE_NONE][0]['value'] . (in_array($term->field_unit_indicator1[LANGUAGE_NONE][0]['value'], array(
    '×',
    'x'
  )) ? '' : ' ') : '');
  $unit_ind3 = (isset($term->field_unit_indicator3[LANGUAGE_NONE][0]['value']) ? $term->field_unit_indicator3[LANGUAGE_NONE][0]['value'] . (in_array($term->field_unit_indicator1[LANGUAGE_NONE][0]['value'], array(
    '×',
    'x'
  )) ? '' : ' ') : '');
  $unit_ind4 = (isset($term->field_unit_indicator4[LANGUAGE_NONE][0]['value']) ? $term->field_unit_indicator4[LANGUAGE_NONE][0]['value'] . (in_array($term->field_unit_indicator1[LANGUAGE_NONE][0]['value'], array(
    '×',
    'x'
  )) ? '' : ' ') : '');
  switch($rank){
    case 'genus':
      if($unit1){
        $name = t('!ind1<em>!unit1</em>', array(
          '!unit1' => $unit1,
          '!ind1' => $unit_ind1
        ));
      }
      break;
    case 'subgenus':
      if($unit1 && $unit2){
        $name = t('<em>!unit1</em> (<em>!unit2</em>)', array(
          '!unit1' => $unit1,
          '!unit2' => $unit2
        ));
      }elseif($unit1){
        $name = t('<em>!unit1</em>', array(
          '!unit1' => $unit1
        ));
      }
      break;
    case 'series':
    case 'subseries':
    case 'section':
    case 'subsection':
      if($unit2 && $unit1){
        $name = t('!ind1<em>!unit1</em> !ind2<em>!unit2</em>', array(
          '!unit1' => $unit1,
          '!ind1' => $unit_ind1,
          '!unit2' => $unit2,
          '!ind2' => $unit_ind2
        ));
      }elseif($unit1){
        $name = t('!ind1<em>!unit1</em>', array(
          '!unit1' => $unit1,
          '!ind1' => $unit_ind1
        ));
      }
      break;
    case 'species':
      // This species has a subgenus (in brackets)
      if($unit1 && $unit2 && $unit3){
        $name = t('!ind1<em>!unit1</em> (!ind2<em>!unit2</em>) !ind3<em>!unit3</em>', array(
          '!unit1' => $unit1,
          '!unit2' => $unit2,
          '!unit3' => $unit3,
          '!ind1' => $unit_ind1,
          '!ind2' => $unit_ind2,
          '!ind3' => $unit_ind3
        ));
      }elseif($unit1 && $unit2){
        $name = t('!ind1<em>!unit1</em> !ind2<em>!unit2</em>', array(
          '!unit1' => $unit1,
          '!unit2' => $unit2,
          '!ind1' => $unit_ind1,
          '!ind2' => $unit_ind2
        ));
      }
      break;
    case 'variety':
      if($unit1 && $unit2 && $unit3 && $unit4){
        $name = t('!unit_ind1<em>!unit1</em> !unit_ind2<em>!unit2</em> !unit_ind3<em>!unit3</em> !unit_ind4<em>!unit4</em>', array(
          '!unit1' => $unit1,
          '!unit2' => $unit2,
          '!unit3' => $unit3,
          '!unit4' => $unit4,
          '!unit_ind1' => $unit_ind1,
          '!unit_ind2' => $unit_ind2,
          '!unit_ind3' => $unit_ind3,
          '!unit_ind4' => $unit_ind4
        ));
      }elseif($unit1 && $unit2 && $unit3){
        $name = t('!unit_ind1<em>!unit1</em> !unit_ind2<em>!unit2</em> !unit_ind3<em>!unit3</em>', array(
          '!unit1' => $unit1,
          '!unit2' => $unit2,
          '!unit3' => $unit3,
          '!unit_ind1' => $unit_ind1,
          '!unit_ind2' => $unit_ind2,
          '!unit_ind3' => $unit_ind3
        ));
      }
      break;
    case 'subspecies':
    case 'subvariety':
    case 'form':
    case 'subform':
      if($unit1 && $unit2 && $unit3 && $unit4){
        $name = t('!unit_ind1<em>!unit1</em> !unit_ind2(<em>!unit2</em>) !unit_ind3<em>!unit3</em> !unit_ind4<em>!unit4</em>', array(
          '!unit1' => $unit1,
          '!unit2' => $unit2,
          '!unit3' => $unit3,
          '!unit4' => $unit4,
          '!unit_ind1' => $unit_ind1,
          '!unit_ind2' => $unit_ind2,
          '!unit_ind3' => $unit_ind3,
          '!unit_ind4' => $unit_ind4
        ));
      }elseif($unit1 && $unit2 && $unit3){
        $name = t('!unit_ind1<em>!unit1</em> !unit_ind2<em>!unit2</em> !unit_ind3<em>!unit3</em>', array(
          '!unit1' => $unit1,
          '!unit2' => $unit2,
          '!unit3' => $unit3,
          '!unit_ind1' => $unit_ind1,
          '!unit_ind2' => $unit_ind2,
          '!unit_ind3' => $unit_ind3
        ));
      }
      break;
  }
  return $name;
}

